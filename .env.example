# Application Configuration
NODE_ENV=development
PORT=3000
DOMAIN=localhost
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/membership_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
REFRESH_SECRET=your-refresh-token-secret-minimum-32-characters

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="Your Organization <noreply@yourdomain.com>"
SMTP_SECURE=false

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# Security Configuration
ENCRYPTION_KEY=your-encryption-key-minimum-32-characters
PASSWORD_RESET_EXPIRY=3600000
EMAIL_VERIFICATION_EXPIRY=86400000

# Digital Cards Configuration
GOOGLE_WALLET_ISSUER_ID=your-google-wallet-issuer-id
GOOGLE_WALLET_SERVICE_ACCOUNT=path/to/service-account.json
APPLE_WALLET_PASS_TYPE_ID=pass.com.yourdomain.membership
APPLE_WALLET_TEAM_ID=your-apple-team-id
APPLE_WALLET_KEY_ID=your-apple-key-id
APPLE_WALLET_KEY_PATH=path/to/certificate.p12

# Analytics Configuration
ANALYTICS_ENABLED=true
SESSION_TIMEOUT=1800000

# Feature Flags
ENABLE_2FA=true
ENABLE_REFERRALS=true
ENABLE_SURVEYS=true
ENABLE_VOLUNTEER=true
ENABLE_WORKFLOWS=true
ENABLE_PUBLIC_PROFILES=true
ENABLE_MEMBER_DIRECTORY=true
ENABLE_SOCIAL_LOGIN=false

# Organization Configuration
ORG_NAME="Your Organization Name"
ORG_EMAIL="info@yourdomain.com"
ORG_PHONE="+1-555-123-4567"
ORG_ADDRESS="123 Main St, City, State 12345"
ORG_TIMEZONE="America/New_York"
ORG_LANGUAGE="en"

# Payment Configuration (Optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_ENVIRONMENT=sandbox

# Social Media Integration (Optional)
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret

# API Configuration
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=900000
API_CORS_ORIGIN=http://localhost:3000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30
BACKUP_DIRECTORY=/opt/membership-system/backups

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Development Configuration
DEBUG_MODE=false
DEBUG_EMAILS=true
DEBUG_DATABASE=false